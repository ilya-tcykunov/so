.col-md-12
  %h2= @question.title
  %p= @question.body

  %h2= "Answers (#{@question.answers.count})"
  .answers-container{data: {answers_container: ''}}
    - @question.answers.each do |answer|
      %p= answer.body

  %h2= "Your answer"
  = form_for [@question, @answer], html: {role: 'form', class: 'form-horizontal'} do |f|
    .form-group
      = f.text_area :body, class: 'form-control'

    .form-group
      = f.submit class: 'btn btn-default'