= form_for @question, html: {role: 'form', class: 'form-horizontal'} do |f|
  - error_messages(f.object)

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'

  .form-group
    = f.label :body
    = f.text_area :body, class: 'form-control'

  .form-group
    = f.submit class: 'btn btn-default'