<% if @success %>
    <% if @comment.commentable.class == Question %>
        $("[data-question-container]").html('<%= j render partial: 'questions/question', locals: {question: @question.reload} %>');
    <% else %>
        $("[data-answers-container]").html('<%= j render partial: 'questions/answers_list', locals: {question: @answer.question} %>');
    <% end %>
<% else %>
    $('.error-messages', '[data-comment-form-for-id="<%= @comment.id %>"]').html('<%= j render partial: 'common/error_messages', locals: {model: @comment} %>');
<% end %>